{% extends '/themes/frontend/Landrick/index-full.html.twig' %}

{% block content %}
    <section class="bg-home d-flex align-items-center position-relative" style="background: url('/application/themes/frontend/Landrick/assets/images/shape01.png') center;">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="form-signin p-4 bg-white rounded shadow">
                        <form action="/login/auth" method="POST">
                            <a href="/">
                                <img src="/application/themes/frontend/Landrick/assets/images/logo-icon.png" class="avatar avatar-small mb-4 d-block mx-auto" alt="">
                            </a>
                            <h5 class="mb-3 text-center">Пожалуйста, авторизуйтесь</h5>

                            <div class="form-floating mb-2">
                                <input type="email" class="form-control" name="email" id="email" placeholder="name@example.com" required>
                                <label for="email">Email адрес</label>
                            </div>
                            <div class="form-floating mb-3">
                                <input type="password" class="form-control" name="password" id="password" placeholder="Введите пароль" required>
                                <label for="password">Пароль</label>
                            </div>

                            <div class="d-flex justify-content-between">
                                <div class="mb-3">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="" id="remember">
                                        <label class="form-check-label" for="remember">Запомнить меня</label>
                                    </div>
                                </div>
                                <p class="forgot-pass mb-0">
                                    <a href="#" class="text-dark small fw-bold">Забыли пароль ?</a>
                                </p>
                            </div>

                            <button class="btn btn-primary w-100" type="submit">Войти</button>

                            <div class="col-12 text-center mt-3">
                                <p class="mb-0 mt-3"><small class="text-dark me-2">Нет аккаунта ?</small>
                                    <a href="#" class="text-dark fw-bold">Регистрация</a>
                                </p>
                            </div>

                            <p class="mb-0 text-muted mt-3 text-center">© <script>document.write(new Date().getFullYear())</script> Landrick.</p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}